{
  "name": "node-task-01",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/sertomviz/node-task-01",
  "author": "T.Sternik",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && babel ./src -d ./dist",
    "prestart": "yarn run -s build",
    "start": "env-cmd -f .env node dist/index.js",
    "dev": "env-cmd -f .env nodemon -w ./src --exec \"babel-node ./src\"",
    "test": "jest --forceExit --detectOpenHandles  --watchAll --maxWorkers=1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "env-cmd": "^10.1.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "supertest": "^5.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "dist"
    ]
  }
}
